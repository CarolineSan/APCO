<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_menu"
                android:id="@+id/txtOptionDigit"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtTitle"
                android:layout_alignEnd="@+id/txtTitle"
                android:layout_alignRight="@+id/txtTitle"
                android:layout_alignBottom="@+id/txtTitle"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/txtDescricao"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/txtTitle"
                android:layout_marginTop="5dp"
                android:text="@string/texto_descricao"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/curtir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_curtir_border_black_24dp" />

            <TextView
                android:id="@+id/library_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toStartOf="@+id/library_image"
                android:layout_toLeftOf="@+id/library_image"
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:drawablePadding="3dp"
                android:text="0"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/library_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toStartOf="@+id/library_video"
                android:layout_toLeftOf="@+id/library_video"
                android:drawableLeft="@drawable/ic_photo_library_black_24dp"
                android:drawablePadding="3dp"
                android:text="2"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/library_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_toStartOf="@+id/library_audio"
                android:layout_toLeftOf="@+id/library_audio"
                android:drawableLeft="@drawable/ic_video_library_black_24dp"
                android:drawablePadding="3dp"
                android:text="1"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/library_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:layout_alignEnd="@+id/txtDescricao"
                android:layout_alignRight="@+id/txtDescricao"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_library_music_black_24dp"
                android:drawablePadding="3dp"
                android:text="0"
                android:textAppearance="?android:textAppearanceSmall" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>