<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/tituloTermos"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Termos e Condições de Uso"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="5dp"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/tituloTermos"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/termo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Lorem ipsum dolor sit amet"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/conteudo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termo_texto"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/termo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Donec euismod arcu"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/conteudo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termo_texto"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/termo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Pellentesque tincidunt cursus"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/conteudo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termo_texto"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>