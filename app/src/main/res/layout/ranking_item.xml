<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ranking_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:text="15"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nome_ranking"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ranking_number"
        android:layout_toEndOf="@+id/ranking_number"
        android:layout_toRightOf="@+id/ranking_number"
        android:text="Caroline Oliveira"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_ranking"
        android:drawableLeft="@drawable/ic_star_yellow_24dp"
        android:drawableStart="@drawable/ic_star_yellow_24dp"
        android:layout_alignLeft="@+id/nome_ranking"
        android:layout_alignStart="@+id/nome_ranking"/>

    <TextView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_ranking"
        android:drawableLeft="@drawable/ic_star_yellow_24dp"
        android:drawableStart="@drawable/ic_star_yellow_24dp"
        android:layout_toEndOf="@+id/star1"
        android:layout_toRightOf="@+id/star1"/>

    <TextView
        android:id="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_ranking"
        android:drawableLeft="@drawable/ic_star_yellow_24dp"
        android:drawableStart="@drawable/ic_star_yellow_24dp"
        android:layout_toEndOf="@+id/star2"
        android:layout_toRightOf="@+id/star2"/>

    <TextView
        android:id="@+id/star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_ranking"
        android:drawableLeft="@drawable/ic_star_yellow_24dp"
        android:drawableStart="@drawable/ic_star_yellow_24dp"
        android:layout_toEndOf="@+id/star3"
        android:layout_toRightOf="@+id/star3"/>

    <TextView
        android:id="@+id/star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_ranking"
        android:drawableLeft="@drawable/ic_star_yellow_24dp"
        android:drawableStart="@drawable/ic_star_yellow_24dp"
        android:layout_toEndOf="@+id/star4"
        android:layout_toRightOf="@+id/star4"/>

    <TextView
        android:id="@+id/pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:text="10850"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textoPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pontos"
        android:layout_alignStart="@+id/pontos"
        android:layout_alignLeft="@+id/pontos"
        android:layout_alignEnd="@+id/pontos"
        android:layout_alignRight="@+id/pontos"
        android:gravity="center"
        android:paddingRight="5dp"
        android:text="Pontos" />

</RelativeLayout>