<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.compliance.petrobras.apco">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.compliance.petrobras.apco.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.compliance.petrobras.apco.SenhaActivity"
            android:parentActivityName="com.compliance.petrobras.apco.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compliance.petrobras.apco.LoginActivity" />
        </activity>
        <activity
            android:name="com.compliance.petrobras.apco.CadastroActivity"
            android:parentActivityName="com.compliance.petrobras.apco.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compliance.petrobras.apco.LoginActivity" />
        </activity>
        <activity
            android:name="com.compliance.petrobras.apco.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.compliance.petrobras.apco.ranking.RankingActivity"
            android:parentActivityName="com.compliance.petrobras.apco.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compliance.petrobras.apco.MainActivity" />
        </activity>
        <activity
            android:name="com.compliance.petrobras.apco.categoria.CategoriaActivity"
            android:parentActivityName="com.compliance.petrobras.apco.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.compliance.petrobras.apco.MainActivity" />
        </activity>
    </application>

</manifest>